
     <p id="notice"><%= flash[:notice] %></p>

    <h2 class="index">Books</h2>

    <table class="table">
      <thead>
        <tr>
          <th class="table-top">Title</th>
          <th class="table-top">Body</th>
          <th colspan="3"></th>
        </tr>
      </thead> 
      
      <tboody>
       
        <% @books.each do |book| %>
        <tr>
          <td><%= book.title %></td>
          <td><%= book.body %></td>
          <td><%= link_to "Show", "/books/#{book.id}" %></td>
          <td><%= link_to "Edit", edit_e_path(book.id) %></td>
          <td><%= link_to "Destroy", destroy_d_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
        <% end %>
        </tr>
      </tboody>

    </table>

    <h3>New book</h3>
     
        <% if @book.errors.any? %>
       <div class="book">
          <p class="errors"><%= @book.errors.count %> erros prohibited this book from being saved:</p>
          <ul>
              <% @book.errors.full_messages.each do |message| %> <!--each文で<%=%>の＝を付けてしまうと全部のエラーを表示させてしまうので注意-->
              <li><%= message %></li>
              <% end %>
          </ul>
        <% end %>
      </div>

    <%= form_with model: @book do |f| %>
      
        <div class="newbook">
          <div class="field_with_errors">
            <div class="newbook-title">Title</div>
          </div>
          
          <div class="field_with_errors">
            <div><%= f.text_field :title %></div>
          </div>
        </div>
        
        <div class="newbook">
           <div class="field_with_errors">
            <div class="newbook-title">Body</div>
           </div>
          
          <div class="field_with_errors">
            <div><%= f.text_area :body %></div>
          </div>
        </div>
    
        <%= f.submit ' Create Book ' %>

    <% end %>
